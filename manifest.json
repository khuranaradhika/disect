{
  "manifest_version": 3,
  "name": "Di$ect",
  "description": "Balancing profits and principles.",
  "version": "1.0",
  "author": "@di$ectTeam",
  "content_scripts": [
    {
      "js": ["scripts/content-script.js"],
      "matches": ["https://nike.com/*"]
    }
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/disect_icon.png"
  },
  "options_page": "options/options.html",
  "permissions": ["activeTab", "storage", "geolocation", "tabs"]
}
